h1 {{$stateParams.collectionName}} - {{count | number}} documents

form.form-inline
  .form-group
    label skip
  .form-group
    input.form-control(type='text', ng-model='skip')
  .form-group
    label limit
  .form-group
    input.form-control(type='textbox', ng-model='limit')
  button.btn.btn-default(ng-click="fetch()") Refresh
  button.btn.btn-default(ng-click="page(false)") Pre
  button.btn.btn-default(ng-click="page(true)") Next

textarea(ng-model="query")
button.btn.btn-default(ng-click="fetch()") Query

div(mg-json-table='', documents='documents')
a.btn.btn-default(ng-click="showRawJson = !showRawJson") Show Raw Json
div((ng-show='showRawJson'))
  br
  pre {{documents | json}}